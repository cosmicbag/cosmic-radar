# Production Environment Variables Example
# Copy this to .env.production for production deployment

# CoinMarketCap Pro API Key (REQUIRED)
CMC_API_KEY=your_production_cmc_api_key_here

# Database URL (REQUIRED - Use production database)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public&connection_limit=10&pool_timeout=20

# CryptoPanic API Key (Optional but recommended)
CRYPTOPANIC_API_KEY=your_production_cryptopanic_api_key_here

# NextAuth Configuration (REQUIRED)
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your_production_nextauth_secret_here_use_openssl_rand_base64_32

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_production_google_client_id_here
GOOGLE_CLIENT_SECRET=your_production_google_client_secret_here

# Node Environment
NODE_ENV=production
